<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bAutocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayAdaptersActivity"
            android:text="@string/autocomplete" />

        <Button
            android:id="@+id/bSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayAdaptersActivity"
            android:text="@string/spinner" />

        <Button
            android:id="@+id/bList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayAdaptersActivity"
            android:text="@string/listview" />

        <Button
            android:id="@+id/bGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayAdaptersActivity"
            android:text="@string/gridview" />

        <Button
            android:id="@+id/bRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayAdaptersActivity"
            android:text="@string/recyclerview" />

        <Button
            android:id="@+id/bExpandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayAdaptersActivity"
            android:text="@string/expandable" />
    </LinearLayout>
</ScrollView>